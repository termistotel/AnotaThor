<Landmark>:
  canvas.after:
    Color:
      rgb: (0.1, 1, 0.1)
    Rectangle:
      pos: (self.x, self.y)
      size: (self.width, self.height)

  size_hint: (None, None)
  width: self.scaler.value*20
  height: self.scaler.value*20

  drag_rectangle: self.x, self.y, self.width, self.height
  drag_timeout: 10000000
  drag_distance: 0