<BoundingBox>:
  canvas.after:
    Color:
      rgba: (1, 0, 0, 1)
    Line:
      points: [self.x, self.y, self.x + self.width, self.y, self.x + self.width, self.y + self.height, self.x, self.y + self.height, self.x, self.y]
      width: self.line_width*max(self.width, self.height)/250
    Ellipse:
      pos: (self.center_x - self.line_width*max(self.width, self.height)/250, self.center_y - self.line_width*max(self.width, self.height)/250)
      size: (2*self.line_width*max(self.width, self.height)/250, 2*self.line_width*max(self.width, self.height)/250)


  size_hint: (None, None)
  width: 0.5*self.max_width
  height: 0.5*self.max_height

  drag_rectangle: self.x, self.y, self.width, self.height
  drag_timeout: 10000000
  drag_distance: 0
